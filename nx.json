{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "publish/{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "release": {
    "projects": ["@kentcdodds/workshop-app", "@kentcdodds/workshop-utils"],
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "packageRoot": "publish/{projectRoot}"
      }
    },
    "changelog": {
      "workspaceChangelog": {
        "file": false,
        "createRelease": "github"
      }
    }
  },
  "nxCloudAccessToken": "ODZlMTQ4OWEtOTk2OS00NzkyLWI2Y2UtOTM2MDNkMmJkNjBkfHJlYWQ="
}
