{
  "name": "epic-workshop",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches",
    "typecheck": "nx typecheck",
    "lint": "nx lint",
    "build": "nx run-many --target build",
    "prestart": "npm run build -s",
    "go": "cross-env NODE_ENV=development EPICSHOP_CONTEXT_CWD=$PWD/packages/example tsx watch $@",
    "start": "cross-env NODE_ENV=production npm -w example run start",
    "dev": "npm -w example run start",
    "test": "nx test",
    "format": "nx format:write",
    "validate": "nx run-many --target build,typecheck,lint,test --parallel"
  },
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "workspaces": [
    "packages/*",
    "packages/example/exercises/*/*",
    "packages/example/examples/*"
  ],
  "dependencies": {
    "@nx/devkit": "^18.3.1",
    "@nx/eslint": "^18.3.1",
    "@nx/js": "^18.3.1",
    "@playwright/test": "^1.39.0",
    "@types/yargs": "^17.0.32",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "globby": "^14.0.1",
    "lru-cache": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "nx": "^18.3.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tsx": "^4.7.0",
    "yargs": "^17.7.2"
  },
  "nx": {
    "includedScripts": []
  },
  "devDependencies": {
    "@nrwl/linter": "^18.3.1",
    "@nx/linter": "^18.3.1",
    "@nx/playwright": "^18.3.1",
    "@nx/workspace": "^18.3.1",
    "eslint-config-kentcdodds": "^21.0.0",
    "verdaccio": "^5.0.4"
  }
}
